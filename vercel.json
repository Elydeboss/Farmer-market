{
  "version": 2,
  "projects": {
    "frontend": {
      "root": "frontend",
      "buildCommand": "npm run build",
      "outputDirectory": "dist"
    },
    "backend": {
      "root": "backend",
      "builds": [{ "src": "src/app.ts", "use": "@vercel/node" }],
      "routes": [{ "src": "/api/(.*)", "dest": "src/app.ts" }]
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/frontend/$1" }
  ]
}
