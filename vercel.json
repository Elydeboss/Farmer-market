{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/app.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/src/app.ts" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ]
}
